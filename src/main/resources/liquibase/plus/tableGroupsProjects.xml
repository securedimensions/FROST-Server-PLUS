    <changeSet author="am" id="2023-07-11-PLUS-GROUPS_PROJECTS" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="GROUPS_PROJECTS" />
            </not>
        </preConditions>

        <createTable tableName="GROUPS_PROJECTS">
            <column name="GROUP_ID" type="${idType-Group}">
                <constraints nullable="true"/>
            </column>
            <column name="PROJECT_ID" type="${idType-Project}">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <addPrimaryKey columnNames="GROUP_ID, PROJECT_ID" constraintName="GROUPS_PROJECTS_PKEY" tableName="GROUPS_PROJECTS"/>
        
        <createIndex tableName="GROUPS_PROJECTS" indexName="GROUPS_PROJECTS_PROJECT_ID">
            <column name="PROJECT_ID" />
        </createIndex>
        
        <createIndex tableName="GROUPS_PROJECTS" indexName="GROUPS_PROJECTS_GROUP_ID">
            <column name="GROUP_ID" />
        </createIndex>
    </changeSet>

