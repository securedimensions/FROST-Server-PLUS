    <changeSet author="am" id="2023-07-17-PLUS-PROJECTS_MULTI_DATASTREAMS" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="PROJECTS_MULTI_DATASTREAMS" />
            </not>
        </preConditions>

        <createTable tableName="PROJECTS_MULTI_DATASTREAMS">
            <column name="PROJECT_ID" type="${idType-Project}">
                <constraints nullable="true"/>
            </column>
            <column name="MULTI_DATASTREAM_ID" type="${idType-MultiDatastream}">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <addPrimaryKey columnNames="PROJECT_ID, MULTI_DATASTREAM_ID" constraintName="PROJECTS_MULTI_DATASTREAMS_PKEY" tableName="PROJECTS_MULTI_DATASTREAMS"/>
        
        <createIndex tableName="PROJECTS_MULTI_DATASTREAMS" indexName="PROJECTS_MULTI_DATASTREAMS_PROJECT_ID">
            <column name="PROJECT_ID" />
        </createIndex>
        
        <createIndex tableName="PROJECTS_MULTI_DATASTREAMS" indexName="PROJECTS_MULTI_DATASTREAMS_MULTI_DATASTREAM_ID">
            <column name="MULTI_DATASTREAM_ID" />
        </createIndex>
    </changeSet>

