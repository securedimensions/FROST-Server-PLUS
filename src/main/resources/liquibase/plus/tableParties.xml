    <changeSet author="am" id="2021-05-11-PLUS-PARTIES-1" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="PARTIES" />
            </not>
        </preConditions>

        <createTable tableName="PARTIES">
            <column name="NAME" type="TEXT"/>
            <column name="DESCRIPTION" type="TEXT"/>
            <column name="AUTHID" type="TEXT"/>
            <column name="NICKNAME" type="TEXT"/>
            <column name="ROLE" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet author="scf" id="2021-05-11-PLUS-PARTIES-2" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <preConditions onFail="MARK_RAN">
            <changeLogPropertyDefined property="id-Party" value="LONG" />
            <not>
                <columnExists columnName="ID" tableName="PARTIES" />
            </not>
        </preConditions>
        <addColumn tableName="PARTIES">
            <column name="ID" type="${idTypeLong}" autoIncrement="true" position="1">
                <constraints primaryKey="true" primaryKeyName="PARTIES_PKEY" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="scf" id="2021-05-11-PLUS-PARTIES-3" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <preConditions onFail="MARK_RAN">
            <or>
                <changeLogPropertyDefined property="id-Party" value="STRING" />
                <changeLogPropertyDefined property="id-Party" value="UUID" />
            </or>
            <not>
                <columnExists columnName="ID" tableName="PARTIES" />
            </not>
        </preConditions>
        <addColumn tableName="PARTIES">
            <column name="ID" type="${idType-Party}" defaultValueComputed="${defaultValueComputed-Party}" position="1">
                <constraints primaryKey="true" primaryKeyName="PARTIES_PKEY"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
