    <changeSet author="am" id="2021-05-11-PROJECTS" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
        <preConditions onFail="MARK_RAN">
            <not>
                <or>
                    <tableExists tableName="PROJECTS" />
                </or>
            </not>
        </preConditions>

        <createTable tableName="PROJECTS">
            <column autoIncrement="true" name="ID" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="PROJECTS_PKEY"/>
            </column>
            <column name="NAME" type="TEXT"/>
            <column name="DESCRIPTION" type="TEXT"/>
            <column name="PROPERTIES" type="JSONB"/>
            <column name="CLASSIFICATION" type="TEXT"/>
            <column name="TERMSOFUSE" type="TEXT"/>
            <column name="PRIVACYPOLICY" type="TEXT"/>
            <column name="URL" type="TEXT"/>
            <column name="CREATED" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="RUNTIME_START" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="RUNTIME_END" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
	</changeSet>

